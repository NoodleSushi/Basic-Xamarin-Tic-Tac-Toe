<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tic_Tac_Toe.MainPage">

    <StackLayout>
        <Label Text="Tic-Tac-Toe"/>
        <Label x:Name="XStatus" TextColor="Red"/>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Text="-" Clicked="OnBoxClicked" ClassId="0" x:Name="Box0" Grid.Row="0" Grid.Column="0"/>
            <Button Text="-" Clicked="OnBoxClicked" ClassId="1" x:Name="Box1" Grid.Row="0" Grid.Column="1"/>
            <Button Text="-" Clicked="OnBoxClicked" ClassId="2" x:Name="Box2" Grid.Row="0" Grid.Column="2"/>
            <Button Text="-" Clicked="OnBoxClicked" ClassId="3" x:Name="Box3" Grid.Row="1" Grid.Column="0"/>
            <Button Text="-" Clicked="OnBoxClicked" ClassId="4" x:Name="Box4" Grid.Row="1" Grid.Column="1"/>
            <Button Text="-" Clicked="OnBoxClicked" ClassId="5" x:Name="Box5" Grid.Row="1" Grid.Column="2"/>
            <Button Text="-" Clicked="OnBoxClicked" ClassId="6" x:Name="Box6" Grid.Row="2" Grid.Column="0"/>
            <Button Text="-" Clicked="OnBoxClicked" ClassId="7" x:Name="Box7" Grid.Row="2" Grid.Column="1"/>
            <Button Text="-" Clicked="OnBoxClicked" ClassId="8" x:Name="Box8" Grid.Row="2" Grid.Column="2"/>
        </Grid>
        <Label x:Name="OStatus" TextColor="Blue"/>
        <Button Text="RESET" Clicked="ResetGame"/>
    </StackLayout>

</ContentPage>
